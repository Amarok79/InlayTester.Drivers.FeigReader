<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<RootNamespace>InlayTester</RootNamespace>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<PackageId>Amarok.InlayTester.Drivers.FeigReader</PackageId>
		<Authors>Olaf Kober</Authors>
		<Company>&lt;none&gt;</Company>
		<Product>Inlay Tester</Product>
		<Description>A shared library with a (serial) driver for communicating with RFID readers/modules from FEIG Electronic.</Description>
		<Copyright>Copyright (c) 2018, Olaf Kober</Copyright>
		<PackageLicenseUrl>https://raw.githubusercontent.com/Amarok79/InlayTester.Drivers.FeigReader/master/LICENSE</PackageLicenseUrl>
		<PackageProjectUrl>https://github.com/Amarok79/InlayTester.Drivers.FeigReader</PackageProjectUrl>
		<CodeAnalysisRuleSet>..\Global.ruleset</CodeAnalysisRuleSet>
		<PackageIconUrl>https://amarok.blob.core.windows.net/public/inlaytester.ico</PackageIconUrl>
		<AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
		<Version>1.1.0</Version>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<OutputPath>..\..\bin\libs\</OutputPath>
		<DocumentationFile>..\..\bin\libs\netstandard2.0\InlayTester.Drivers.FeigReader.xml</DocumentationFile>
		<GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
		<LangVersion>latest</LangVersion>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<WarningsAsErrors />
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<OutputPath>..\..\bin\libs\</OutputPath>
		<DocumentationFile>..\..\bin\libs\netstandard2.0\InlayTester.Drivers.FeigReader.xml</DocumentationFile>
		<GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
		<LangVersion>latest</LangVersion>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\InlayTester.Drivers.FeigReader.licenseheader" Link="InlayTester.Drivers.FeigReader.licenseheader" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Amarok.InlayTester.Shared" Version="1.5.0" />
		<PackageReference Include="Amarok.InlayTester.Shared.Transports" Version="2.0.1" />
		<PackageReference Include="Common.Logging" Version="3.4.1" />
	</ItemGroup>

</Project>
